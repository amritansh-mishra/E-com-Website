<%- include('./partials/header') %>

<!-- ðŸ”´ Error Message Display -->
<% if(error.length > 0) { %>
  <div class="fixed top-6 left-1/2 transform -translate-x-1/2 z-50 px-6 py-3 rounded-md bg-red-500 shadow-md">
    <span class="text-white text-sm font-medium"><%= error %></span>
  </div>
<% } %>

<!-- ðŸ”µ Main Page Layout: Two Panels Side-by-Side -->
<div class="min-h-screen flex flex-col md:flex-row">

  <!-- ðŸŸ£ Left Panel â€“ Register Section -->
  <div class="w-full md:w-1/2 flex items-center justify-center px-10 py-16 bg-gradient-to-br from-blue-50 to-blue-100">
    <div class="max-w-md w-full">
      <h2 class="text-4xl font-bold text-gray-800 mb-2">Welcome to <span class="text-blue-500">Scatch</span></h2>
      <p class="text-lg text-gray-600 mb-6">Create your account</p>

      <form autocomplete="off" action="/users/register" method="post" class="space-y-4">
        <input
          class="w-full px-4 py-2 rounded-md bg-white border border-gray-300 focus:outline-blue-400"
          type="text" name="fullname" placeholder="Full Name">

        <input
          class="w-full px-4 py-2 rounded-md bg-white border border-gray-300 focus:outline-blue-400"
          type="email" name="email" placeholder="Email">

        <input
          class="w-full px-4 py-2 rounded-md bg-white border border-gray-300 focus:outline-blue-400"
          type="password" name="password" placeholder="Password">

        <button type="submit"
          class="w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 rounded-full transition duration-200">
          Register
        </button>
      </form>
    </div>
  </div>

  <!-- ðŸŸ¢ Right Panel â€“ Login Section -->
  <div class="w-full md:w-1/2 flex items-center justify-center px-10 py-16 bg-white">
    <div class="max-w-md w-full">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Login to your account</h2>

      <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
        <input
          class="w-full px-4 py-2 rounded-md bg-zinc-100 border border-gray-300 focus:outline-blue-400"
          type="email" name="email" placeholder="Email">

        <input
          class="w-full px-4 py-2 rounded-md bg-zinc-100 border border-gray-300 focus:outline-blue-400"
          type="password" name="password" placeholder="Password">

        <button type="submit"
          class="w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 rounded-full transition duration-200">
          Login
        </button>
      </form>
    </div>
  </div>

</div>

<%- include('./partials/footer') %>
